{
  "manifest_version": 2,
  "name": "NSFWBlocker",
  "version": "1.0",

  "description": "Blocks pages based on their NSFW content",
  "icons": {
    //  "48": "icons/beasts-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": []
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "browser_action": {},

  "web_accessible_resources": []
}
