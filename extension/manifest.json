{

  "manifest_version": 2,
  "name": "Image Scrubber",
  "version": "1.0",

  "description": "Blocks webpages by checking images on the page through Yahoo's nsfw classifer",
  "icons": {
  //  "48": "icons/beasts-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*","*://*.pornhub.com/*","*://*.reddit.com/*"],
      "js": ["jquery-3.2.1.min.js","RIP.min.js","underscore.js","nsfw_tester.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "browser_action": {},

  "web_accessible_resources": []

}
